<!-- /sections/index-hero.liquid -->
{%- assign transparency_class = '' -%}
{%- if section.settings.transparent -%}
  {%- assign transparency_class = 'hero__content--transparent' -%}
{%- endif -%}


{{ 'ctm-patients-index-hero.css' | asset_url | stylesheet_tag }}
  {% if section.settings.box-shadow %}
   <style>
    .ctm-box-shadow {
      box-shadow: {{section.settings.box-shadow-offset-x}}px {{section.settings.box-shadow-offset-y}}px {{section.settings.box-shadow-blur-radius}}px {{section.settings.box-shadow-spread-radius}}px {{section.settings.shadow-color}} !important;
      position: relative !important;
      z-index: 99 !important;
    }
   </style>
  {% endif %}
  
<div style="background-color:{{ section.settings.bgcolor }};{% if section.settings.border-to-show %}border-top:2px solid gray; border-bottom:2px solid gray;{% endif %} margin-top:{{ section.settings.margin-t }}px; margin-bottom:{{ section.settings.margin-b }}px;" class="index-hero wide-image js-overflow-container {{ section.settings.text_color }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero"
  data-overlay-header>
  <div class="hero__content__wrapper  {{ section.settings.flex_align }} {{ transparency_class }}">
    <div class="hero__content js-overflow-content">
      {% unless section.settings.title == '' %}
        <h1 class="hero__title"
          data-aos="hero"
          data-aos-order="1">
      {{ section.settings.title | escape }}</h1>{% endunless %}
      {% unless section.settings.description == '' %}
        <p class="hero__description h5--body"
          data-aos="hero"
          data-aos-order="2">
          {{ section.settings.description }}
        </p>
      {% endunless %}
      {% unless section.settings.link_text == '' %}
        <a class="{{ section.settings.button_style }} {{ section.settings.button_color }}"
          href="{{ section.settings.link }}"
          data-aos="hero"
          style="font-size:{{ section.settings.button-text-size }};"
          data-aos-order="3">
          
        {{ section.settings.link_text | escape }}
        </a>
      {% endunless %}
    </div>

    {% if section.settings.link != blank %}
      {% unless section.settings.link_text != blank %}
        <a href="{{ section.settings.link }}" class="hero__content__link">&nbsp;</a>
      {% endunless %}
    {% endif %}
  </div>
  {% assign overlay_opacity = section.settings.overlay_opacity | times: 0.01 %}
  <div class="image-overlay" style="background-color:{{ section.settings.overlay_color }} !important; opacity:{{ overlay_opacity }};"></div>

  {% render 'image-background-mu' , img_object: section.settings.image, frame_height_class: section.settings.height, bg_position: section.settings.bg_position, bg_size:section.settings.bg_size, bg_color:section.settings.bgcolor, image-height-mobile: section.settings.image-height-mobile, section-id:section.settings.custom-id %}

<!-- <div class="image-overlay" style="background-color:{{ section.settings.bgcolor }} !important; opacity:{{ bg_opacity }};"></div> -->
</div>

